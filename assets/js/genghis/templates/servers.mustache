<header><h2>Servers</h2></header>
<div class="content">
    <table>
        <thead>
            <tr>
                <th>name</th>
                <th>databases</th>
                <th>size</th>
                <th data-sorter="false"></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<div class="add-form-toggle form-inline" role="form">
    <button class="btn">Add server</button>
</div>

<div class="add-form form-inline" role="form">
    <div class="form-group add-form-input">
        <div class="input-group">
            <label class="sr-only" for="new-server-uri">Server URI</label>
            <input class="name form-control" type="text" id="new-server-uri">
            <span class="input-group-addon help" title="user:pass@localhost:27017/db">?</span>
        </div>
    </div>
    <button class="add btn btn-primary">Add server</button>
    <button class="cancel btn">Cancel</button>
</div>
